generator client {
  provider = "prisma-client-js"
  output   = "./node_modules/@prisma/client" // Ensure this is the correct location
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Video {
  id             String   @id @default(cuid())
  title          String
  description    String?
  publicId       String
  originalSize   String
  compressedSize String
  duration       String
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
}
